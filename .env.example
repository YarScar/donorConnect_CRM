# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real secrets to version control

# Database Configuration
# Get this from your database provider (e.g., Neon, Supabase, Railway)
DATABASE_URL='postgresql://username:password@host:5432/database?sslmode=require'

# JWT Secret for Authentication
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST be at least 32 characters in production
JWT_SECRET='your-secret-jwt-key-change-this-to-something-secure-and-random'

# OpenAI API Configuration (Optional - for AI features)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY='sk-...'
OPENAI_MODEL='gpt-4'

# Application Environment
NODE_ENV='development'

# Logging Level (error, warn, info, debug)
LOG_LEVEL='debug'

# Prisma Configuration
PRISMA_CLIENT_ENGINE_TYPE='binary'
